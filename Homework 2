       // 4 задача.
        const sum = (num1, num2) => {
           return num1 + num2;
       }
       console.log(sum(2, 4));


       const mult = (num1, num2) => {
           return num1 * num2;
       }
       console.log(mult(3, -1));


       const div = (num1, num2) => {
           return num1 / num2;
       }
       console.log(div(9, 5));


       function sub(num1, num2) {
           if (num1 > num2) {
               return num1 - num2;
           }
           else if (num1 < num2) {
               return num2 - num1;
           }
           else if (num1 === num2) {
               return 0;
           }
        }

        console.log(sub(2, 13));
        
